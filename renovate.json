{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        "security:openssf-scorecard",
        "schedule:nonOfficeHours"
    ],
    "labels": [
        "Kind/Dependencies"
    ],
    "packageRules": [
        {
            "groupName": "Capytest packages",
            "matchPackagePatterns": [
                "^go\\.alt-gnome\\.ru/capytest"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch"
            ]
        },
        {
            "matchPackageNames": [
                "mvdan.cc/sh/v3"
            ],
            "enabled": false
        }
    ],
    "vulnerabilityAlerts": {
        "labels": [
            "Kind/Security"
        ],
        "automerge": true
    }
}